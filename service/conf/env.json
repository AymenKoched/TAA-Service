{
  "environment": "production",
  "server": {
    "port": 7001
  },
  "database": {
    "type": "postgres",
    "host": "{{DB_HOST}}",
    "port": "{{DB_PORT:number}}",
    "database": "{{DB_NAME}}",
    "username": "{{DB_USERNAME}}",
    "password": "{{DB_PASSWORD}}",
    "synchronize": false,
    "logging": true,
    "entities": ["dist/entities/**/*.js"],
    "migrations": ["dist/db/migrations/**/*.js"],
    "migrationsRun": true,
    "ssl": {
      "rejectUnauthorized": false
    }
  },
  "jwt": {
    "publicKeyPath": "./conf/certs/dev.public_key.pem",
    "privateKeyPath": "./conf/certs/dev.private_key.pem",
    "signOptions": {
      "expiresIn": "1h",
      "algorithm": "RS256"
    }
  }
}
